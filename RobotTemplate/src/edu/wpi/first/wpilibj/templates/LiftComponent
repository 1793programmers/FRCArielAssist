package edu.wpi.first.wpilibj.templates;

import edu.wpi.first.wpilibj.DigitalInput;
import edu.wpi.first.wpilibj.Joystick;
import edu.wpi.first.wpilibj.Victor;

/**
 *
 * @author MEOW MEOW
 */

public class LiftComponent implements RobotComponent {
    // Put methods for controlling this subsystem
    // here. Call these from Commands.
    private Joystick jStick; 
    private Victor lVictor;
    //Put 2 below in Robot Main Class
    //DigitalInput frontLimitSwitch; 
    //DigitalInput backLimitSwitch;
    private DigitalInput fLSwitch; 
    private DigitalInput bLSwitch;
    
    public LiftComponent(Joystick j, Victor v, DigitalInput s1, DigitalInput s2){
        jStick = j;
        lVictor = v;
        fLSwitch = s1;
        bLSwitch = s2;
    }
    
    public void initialize() {
        System.out.println("Reached init");    
        //To change body of generated methods, choose Tools | Templates.
    }
    
    
    public void autonomousInit() {
        lVictor.set(-2); //move to shooting position
        boolean isBLimitOpen = bLSwitch.get(); 
        if (!isBLimitOpen) { //when limitswitch is closed the arm will stop
            lVictor.set(0); 
        }
    }

    public void autonomousPeriodic() {
       
        
    }

    public void teleopInit() {
         

    }

    public void teleopPeriodic() {
        System.out.println("Reached teleop"); 
        
         
        boolean isFLimitOpen = fLSwitch.get();  
        boolean isBLimitOpen = bLSwitch.get(); 
        double armSignal = jStick.getY(); //vertical axis of joystick 
        if(armSignal < 0) { //move forward
            if(isFLimitOpen) { 
                lVictor.set(1.0); //move motor forward
            System.out.println(lVictor.get()); //shows pwm value 
            } else { 
                lVictor.set(0); 
            }
        } else if (armSignal > 0){
            if(isBLimitOpen) {
                lVictor.set(-1.0);
            } else {
                lVictor.set(0); 
            }
        } else {
            lVictor.set(0);
        }
        
    }
              
    
    public void disabledInit() {

    }

    public void disabledPeriodic() {
    }

  
}
